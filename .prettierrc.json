{
  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": "*.astro",
      "options": { "parser": "astro" }
    },
    {
      "files": "src/content/characters/**/*.md",
      "options": {
        "proseWrap": "always"
      }
    }
  ],
  "semi": false,
  "singleQuote": true
}
